---
interface Props {
  title: string;
  description: string;
  cover: ImageMetadata;
  url: string;
  tags: string[];
}

import { Image } from "@astrojs/image/components";

const { title, description, cover, url, tags } = Astro.props;
---

<a
  href={url}
  class="group block p-4 rounded-lg bg-white/50 dark:bg-gray-900/50 backdrop-blur-sm shadow-lg transition-all"
>
  <div class="relative aspect-video mb-4 overflow-hidden rounded-lg">
    <Image
      src={cover}
      alt={title}
      width={500}
      height={500}
      quality={50}
      format="webp"
      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
    />
  </div>

  <h3 class="text-xl font-bold mb-2">{title}</h3>

  <p class="text-gray-600 dark:text-gray-300 mb-4 line-clamp-2">
    {description}
  </p>

  <div class="flex flex-wrap gap-2">
    {
      tags.map((tag) => (
        <span class="text-sm px-2 py-1 rounded-md bg-primary-100/10 text-primary-100">
          {tag}
        </span>
      ))
    }
  </div>
</a>
